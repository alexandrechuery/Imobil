@model IEnumerable<ImobilidadeFinal.Models.Imovel>

@{
    ViewBag.Title = "Index";
}

<h2>Imóveis</h2>

<p>
    @Html.ActionLink("Cadastrar Novo Imovel", "Inserir")
</p>


<table class="table">
    <tr>
        <th>
            @Html.DisplayName("ID Imóvel")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Vagas)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quartos)
        </th>
        <th>
            @Html.DisplayName("Suíte")
        </th>
        <th>
            @Html.DisplayName("Área")
        </th>
        <th>
            @Html.DisplayName("Valor Total")
        </th>
        <th>
            @Html.DisplayName("Nome do Bairro")
        </th>
        <th>
            @Html.DisplayName("Nome do Proprietário")
        </th>
        <th>
            @Html.DisplayName("Nome do Tipo do Imóvel")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.IdImovel)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Vagas)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quartos)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Suite)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Area)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ValorTotal)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Bairro.NomeBairro)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Proprietario.NomeProprietario)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TipoImovel.NomeTipoImovel)
        </td>
        <td>
            @Html.ActionLink("Alterar", "Alterar", new { id = item.IdImovel }) |
            @Html.ActionLink("Excluir", "Excluir", new { id = item.IdImovel })
        </td>
    </tr>
    }

</table>
